              <h1>Lista wyszukancyh wrzutek</h1>
          <div class = "row">
      <%= render @gists %>
</div>
</div>
            </div>
          </div>
</div>
        </div>


 <!-- .container -->

 
     
     <div class="navbar navbar-default navbar-fixed-bottom">
        <div class="navbar-inner">
          <p class="navbar-text pull-center"><%= facebook_like %></p>
