<% if(@gists.length > 0) %>
<%- model_class = Gist -%>
<div class="navbar navbar-fixed-top navbar-inverse">
  <div class="navbar-inner">
    <a class="brand" href="/gists">Marek Bednarczyk - Lepsza wersja My gists</a>
    <ul class="nav">
    	<li class="active"><a href="/gists">Home</a></li>
      <li class="divider-vertical"></li>
      <li><a href="/gists/new">Nowa wrzutka</a></li>
      <li class="divider-vertical"></li>
    </ul>
    <ul class="nav pull-right">
          <form class="navbar-form navbar-left pull-right" role="search" action="/gists/search">
          <div class="form-group">
 
        <%= select_tag(:lang, options_for_select(Pygments.lexers.keys.sort.map! {|l| l.downcase.strip}, params[:lang]))%>
          </div>
          <button type="submit" class="btn btn-default">Search</button>
        </form>
        
        </ul>
